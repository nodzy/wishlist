<script>
  $.notifyDefaults({
    placement: {
      from: "top",
      align: "center"
    },
    offset: {
      x: 0,
      y: 55
    }
  })
</script>
<script>
  $(document).ready(function() {
    <% flash.each do |type, message| %>
      $.notify({
        message: "<%= message -%>"
      }, {
        type: "<%= type.to_s -%>"
      });
    <% end %>
  });
</script>
