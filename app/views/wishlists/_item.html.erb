<div class="wishlist-box breakable-words">
  <div class="thumbnail">
    <div class="caption">
      <h3><%= item.name %></h3>

      <p><%= item.description %></p>

      <%= link_to edit_wishlist_item_path(@wishlist, item), class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-edit"></span> Edit
      <% end %>

      <a class="btn btn-sm btn-danger-outline btn-primary" data-toggle="popover-with-html"
         data-placement="bottom" data-trigger="focus" tabindex="0"
         data-content-source=".item-<%= item.id -%>-delete-confirm">
        <span class="glyphicon glyphicon-remove"></span> Delete
      </a>
      <div class="item-<%= item.id -%>-delete-confirm hide">
        <%= t("delete_ask") -%>
        <%= link_to t("delete_confirm"),
            wishlist_item_path(wishlist_id: @wishlist.id, id: item.id),
            method: :delete, class: "btn btn-sm btn-danger" -%>
      </div>

      <div class="unreserve-button-display">
        <%= button_to([@wishlist, item, item.reservation], type: "submit", class: "btn btn-default btn-sm", method: :delete, disabled: !item.reserved?) do %>
          <span class="glyphicon glyphicon-minus-sign"></span>
          <%= item.reserved? ? t("reserved") : t("unreserved") %>
        <% end %>
      </div>
    </div>
  </div>
</div>
