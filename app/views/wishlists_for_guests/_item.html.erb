<div class="wishlist-box breakable-words">
  <div class="thumbnail">
    <div class="caption">
      <h3><%= item.name %></h3>

      <p><%= item.description %></p>

      <%= form_for([@wishlist, item, Reservation.new]) do |f| %>
        <%= button_tag(type: 'submit', class: "btn btn-default btn-sm submit", disabled: item.reserved?) do %>
          <span class="glyphicon glyphicon-gift"></span>

          <%= item.reserved? ? t("gift_reserved") : t("gift_to_reserve") -%>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
