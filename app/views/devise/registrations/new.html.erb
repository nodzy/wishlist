<div class="page-settings">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="headers">
        <h2>Sign up</h2>
      </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages %>

          <div class="content-in-block col-xs-12 col-sm-12">
            <div class="field form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, class: "form-control input-width" %>
            </div>

            <div class="field form-group">
              <%= f.label :password %>
              <% if User::MINIMUM_PASSWORD_LENGTH %>
                <em>(<%= User::MINIMUM_PASSWORD_LENGTH %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: "form-control input-width" %>
            </div>

            <div class="field form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-width" %>
            </div>

            <div class="actions btn-in-sign-up-page">
              <%= f.submit "Sign up", class: "btn btn-success" %>
            </div>

            <p class="center-content"> Already have an account? <%= link_to "Sign in.", new_user_session_path %> </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
